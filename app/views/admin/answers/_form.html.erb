<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  
  <% if @answer.errors.any? %>
    <% @answer.errors.full_messages.each do |msg| %>
      <div class="flash alert"><%= msg %></div>
    <% end %>
  <% end %>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60 %>
  </p>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
