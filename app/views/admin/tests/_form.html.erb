<%= form_with model: [:admin, @test], local: true do |form| %>
  
  <% if @test.errors.any? %>
    <% @test.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %> 

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= form.label :category %><br>
    <%= form.select :category, Category.pluck(:title), prompt: true %>
  </p>

  <p>
    <%= form.label :level %><br>
    <%= form.select :level, [1, 2, 3, 4, 5] %>
  </p>

  <p>
    <%= form.label :timer %><br>
    <%= form.number_field :timer, id: :test_timer %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
