<div class="container">
  <div class="row">
    <div class="col-12 mb-5">
      <h1><%= t('tests.index.header') %></h1>
    </div>
    <table class="table table-bordered">
      <th class="sort-by-title pointer">
        Title
        <%= octicon 'arrow-up', class: "text-success hide" %>
        <%= octicon 'arrow-down', class: "text-success hide" %>
      </th>
      <th colspan="2">Action</th>
      <% @tests_pages.each do |test| %>

        <tr>
          <td>
              <h4><%= test.title %></h4>
          </td>
          
          <td class="col-1">
            <%= button_to t('.start'), start_test_path(test), class: "btn btn-primary" %>
          </td>
        </tr>

      <% end %>
    </table>
  </div>

  <%= link_to "Feedback", mails_feedback_path %>
   
   <nav class="mt-5"> 
    <%= paginate @tests_pages %>
   </nav>   
</div>
